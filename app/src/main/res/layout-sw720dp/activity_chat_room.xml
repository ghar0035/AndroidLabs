<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatRoomActivity"
    android:orientation="vertical">

    <ListView
        android:id="@+id/chatListView"
        android:layout_width="300dp"
        android:layout_height="1647dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="46dp" />

    <FrameLayout
        android:id="@+id/chatFrameLayoutTablet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="fill"
        android:layout_toEndOf="@+id/chatListView"
        android:layout_alignParentEnd="true"/>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sendBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/chatListView"
            android:layout_weight="1"
            android:backgroundTint="@color/lightGray"
            android:gravity="fill"
            android:text="@string/sendBtn"
            android:textColor="@color/black">

        </Button>

        <EditText
            android:id="@+id/inputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="fill"
            android:hint="@string/chatInput">

        </EditText>

        <Button
            android:id="@+id/receiveBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/lightGray"
            android:gravity="fill"
            android:text="@string/receiveBtn"
            android:textColor="@color/black">

        </Button>

    </LinearLayout>




</RelativeLayout>